{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "src/server",
    "outDir": "dist/server",
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/server/**/*"],
  "exclude": ["src/**/*.tsx", "node_modules", "dist"]
}