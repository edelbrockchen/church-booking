{
  "compilerOptions": {
    "target": "ES2022",                 
    "module": "CommonJS",               // 後端用 CommonJS，Node.js 最穩定
    "moduleResolution": "Node",
    "outDir": "dist",                   // 編譯後輸出到 dist/
    "rootDir": "src",                   // 來源根目錄（會保留 server/ 子資料夾）
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/server/**/*"],       // 只編譯後端程式碼
  "exclude": ["node_modules", "dist"]
}